<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_lr"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:background="#f5f5f5">



    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/mypage_list_scenario_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Scenario Name"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/mypage_list_score_tv"
        android:textSize="33dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "0"/>

    <ProgressBar
        android:id="@+id/mypage_list_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_centerHorizontal="true"
        android:progressTint="#684e8c"
        android:max="100" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="11dp"
            android:text="0"/>

        <TextView
            android:id="@+id/mypage_list_max_score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="11dp"
            android:text="100"/>
    </FrameLayout>





</LinearLayout>

