<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/mypage_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/purple"
                android:layout_marginTop="20dp"
                android:textSize="23dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Mypage"/>

            <ImageView
                android:onClick="onClick_mypage_profile"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/mypage_profile_iv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:elevation="6dp"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/mypage_modify_tv"
                android:layout_marginTop="3dp"
                android:textSize="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진을 터치하여 수정"/>


            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/mypage_name_tv"
                android:layout_marginTop="40dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USERNAME"/>

            <ListView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:id="@+id/mypage_listview"/>


        </LinearLayout>

    </ScrollView>

    <!--네비게이션 메뉴-->
    <include
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        layout="@layout/navigation" />

</FrameLayout>


