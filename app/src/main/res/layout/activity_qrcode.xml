<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lipnus.com.realworld.quest.QrcodeActicity">

    <!--헤더-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/drag_iv"
            android:layout_width="37dp"
            android:layout_height="12dp" />
    </LinearLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:textColor="#2cc1e0"
        android:id="@+id/qr_title_tv"
        android:layout_marginTop="20dp"
        android:textSize="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR코드를 찾아주세요"/>

    <TextView
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/qr_hint_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="부가적인 문장들이 들어갈 공간"/>

    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">

        <com.dlazaro66.qrcodereaderview.QRCodeReaderView
            android:id="@+id/qrdecoderview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/qr_overlap_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>



    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/qrcode_resultTv"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

</LinearLayout>
