<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/synopsis_backgroud_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onClick_synopsis"/>

    <LinearLayout
        android:onClick="onClick_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/synopsis_back_iv"
            android:layout_width="25dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="MAIN"/>
    </LinearLayout>


    <!--대화창이 있는 곳-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="40dp">

        <ImageView
            android:background="@drawable/synopsis_top"
            android:layout_width="320dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/synopsis_tv"
            android:gravity="center"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/synopsis_mid"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:lineSpacingExtra="3dp"
            android:text=""/>

        <ImageView
            android:background="@drawable/synopsis_bottom"
            android:layout_width="320dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>