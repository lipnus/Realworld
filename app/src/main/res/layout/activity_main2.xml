<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111430">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main2_title_iv"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="130dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:text="시나리오 목록"/>

        <!--대화창이 있는 곳-->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:background="@drawable/synopsis_top"
                android:layout_width="320dp"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/main2_listview"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:background="@drawable/synopsis_mid"
                android:dividerHeight="0px"/>

            <ImageView
                android:background="@drawable/synopsis_bottom"
                android:layout_width="320dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:onClick="onClick_banner"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main2_banner_iv"/>


</FrameLayout>