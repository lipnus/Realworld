<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:paddingTop="10dp">

    <!--홈-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/navitaion_menu_lr1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/navitaion_menu_iv1"
                android:layout_gravity="center"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                android:paddingTop="3dp"
                android:id="@+id/navitaion_menu_tv1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="홈"
                android:textSize="9dp"/>
        </LinearLayout>

    </LinearLayout>

    <!--내 가방-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/navitaion_menu_lr2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/navitaion_menu_iv2"
                android:layout_gravity="center"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                android:paddingTop="3dp"
                android:id="@+id/navitaion_menu_tv2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 가방"
                android:textSize="9dp"/>
        </LinearLayout>

    </LinearLayout>

    <!--마이페이지-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/navitaion_menu_lr3"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/navitaion_menu_iv3"
                android:layout_gravity="center"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                android:paddingTop="3dp"
                android:id="@+id/navitaion_menu_tv3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마이페이지"
                android:textSize="9dp"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>