<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--표시되는 부분-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--노가다로 만든 리스트-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/purple"
                android:layout_marginTop="20dp"
                android:textSize="23dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="Setting"/>

            <!--알림-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <View
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#bdbdbd"/>

                <TextView
                    android:id="@+id/setting_version_tv"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="알림"/>


                <com.suke.widget.SwitchButton
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="20dp"
                    android:id="@+id/setting_alarm_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <View
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#bdbdbd"/>


            </FrameLayout>

            <!--위치정보수집-->
            <FrameLayout
                android:onClick="onClick_setting_rule"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="위치정보수집"/>

                <com.suke.widget.SwitchButton
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="20dp"
                    android:id="@+id/setting_location_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#bdbdbd"/>
            </FrameLayout>

            <!--이용약관-->
            <FrameLayout
                android:onClick="onClick_setting_term"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView

                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="게임이용약관"/>

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/rightarrow"/>

                <View
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#bdbdbd"/>
            </FrameLayout>

            <!--개인정보 보호정책-->
            <FrameLayout
                android:onClick="onClick_setting_personal"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="개인정보보호정책"/>

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/rightarrow"/>

                <View
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#bdbdbd"/>
            </FrameLayout>

            <!--게임불편문의-->
            <FrameLayout
                android:onClick="onClick_setting_as"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="게임불편문의"/>

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/rightarrow"/>

                <View
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#bdbdbd"/>
            </FrameLayout>

        </LinearLayout>


        <!--네비게이션 메뉴-->
        <include
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            layout="@layout/navigation" />



    </FrameLayout>
</LinearLayout>









